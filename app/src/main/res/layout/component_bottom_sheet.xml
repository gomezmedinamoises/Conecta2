<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">


    <ImageView
        android:id="@+id/home_bottom_sheet_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_home"
        android:contentDescription="@string/home" />

    <TextView
        android:id="@+id/home_bottom_sheet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/dmsans_regular"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/home"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/frame_home_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame_home_profile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#F6F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_bottom_sheet_icon">

    </FrameLayout>

    <ImageView
        android:id="@+id/profile_bottom_sheet_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_home_profile"
        android:background="@drawable/ic_profile"
        android:contentDescription="@string/profile"/>

    <TextView
        android:id="@+id/profile_bottom_sheet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/dmsans_regular"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/profile"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/frame_profile_recharge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_home_profile" />

    <FrameLayout
        android:id="@+id/frame_profile_recharge"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#F6F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_bottom_sheet_icon">

    </FrameLayout>

    <ImageView
        android:id="@+id/recharge_bottom_sheet_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_profile_recharge"
        android:background="@drawable/ic_recharge"
        android:contentDescription="@string/recharges"/>

    <TextView
        android:id="@+id/recharge_bottom_sheet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/dmsans_regular"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/recharges"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/frame_recharge_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_profile_recharge" />

    <FrameLayout
        android:id="@+id/frame_recharge_contact"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#F6F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recharge_bottom_sheet_icon">

    </FrameLayout>

    <ImageView
        android:id="@+id/contact_bottom_sheet_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_recharge_contact"
        android:background="@drawable/ic_contact"
        android:contentDescription="@string/contact"/>

    <TextView
        android:id="@+id/contact_bottom_sheet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="@string/contact"
        android:textSize="16sp"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/frame_contact_portability"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_recharge_contact" />

    <FrameLayout
        android:id="@+id/frame_contact_portability"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#F6F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_bottom_sheet_icon">

    </FrameLayout>

    <ImageView
        android:id="@+id/portability_bottom_sheet_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_contact_portability"
        android:background="@drawable/ic_portability"
        android:contentDescription="@string/portability"/>

    <TextView
        android:id="@+id/portability_bottom_sheet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="@string/portability"
        android:textSize="16sp"
        android:padding="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/frame_portability_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_contact_portability" />

    <FrameLayout
        android:id="@+id/frame_portability_logout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#F6F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portability_bottom_sheet_icon">

    </FrameLayout>

    <ImageView
        android:id="@+id/logout_bottom_sheet_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_portability_logout"
        android:background="@drawable/ic_logout"
        android:contentDescription="@string/logout"/>

    <TextView
        android:id="@+id/logout_bottom_sheet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="@string/logout"
        android:textSize="16sp"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_portability_logout" />

</androidx.constraintlayout.widget.ConstraintLayout>